root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[*.py]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.{js,ts, jsx, tsx, yml, html}]
indent_style = space
indent_size = 2

[*.{js,ts, jsx, tsx, py}]
max_line_length = 80

[*.json]
indent_size = 2
insert_final_newline = ignore

[*.{md, markdown, diff}]
trim_trailing_whitespace = false
